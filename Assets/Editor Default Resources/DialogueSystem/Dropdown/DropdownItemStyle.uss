/*< ---------------------------------------------------------- Main >*/
.dropdownItem {

	background-color: rgba(19, 19, 19, 1);
	
	height: 27px;
	width: 162px;

	flex-direction: row;
}

.dropdownItem:hover {
	
	cursor: link;

	background-color: rgba(120, 120, 120, 1);
}

.dropdownItem-selected {
	
	background-color: rgba(58, 121, 187, 1);
}

.dropdownItem-last {
	
	/* top - right - bottom - left */
	border-radius: 0px 0px 4px 4px;
}


/*< ---------------------------------------------------------- Icon Image >*/
.dropdownItem-icon-image {

	align-self: center;
	
	height: 15px;
	width: 15px;
	
	/* top - right - bottom - left */
	margin: 0px 0px 0px 4.5px;
}

.dropdownItem:hover
.dropdownItem-icon-image {
	
	cursor: link;
}


/*< ---------------------------------------------------------- Text Label >*/
.dropdownItem-text-label {

	color: white;
	
	font-size: 13px;
	
	align-self: center;
	
	-unity-font-definition: url('project:/Assets/Data/Fonts/Inter/asset/Inter-Medium-Static-SDF.asset');
	
	/* top - right - bottom - left */
	margin: 1px 16.5px 0px 4.5px;
}

.dropdownItem:hover
.dropdownItem-text-label {
	
	cursor: link;
}