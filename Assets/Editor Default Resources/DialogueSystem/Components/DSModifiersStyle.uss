/*< -------------------- Common -------------------- >*/
.modifier_RemoveModifier_Button {

	height: 28px;
	width: 25px;

	font-size: 15px;
	
	align-self: center;

	-unity-slice-top: 1;
	-unity-slice-right: 1;
	-unity-slice-bottom: 1;
	-unity-slice-left: 1;

	/* top - right - bottom - left */
	margin: 0px 0px 0.5px 0px;
	padding: 0px 0px 0px 0px;
	border-width: 0px 0px 0px 0px;
	border-radius: 0px 0px 0px 0px;
}

/*< -------------------- Condition -------------------- >*/
.modifier_Condition_MainBox {

	height: 30px;

	flex-direction: row;
	flex-grow: 1;
	justify-content: space-between;

	/* top - right - bottom - left */
	margin: 0px 0px 0px 0px;
	border-width: 0px 0px 0px 0px;
}

.modifier_Condition_TextField {

	width: Auto;
	height: 30px;

	white-space: normal;
	flex-grow: 500;

	/* top - right - bottom - left */
	margin: 0px 1px 0px -1px;
	padding: 0px 0px 0px 0px;
	border-width: 0px 0px 0px 0px;
}

.modifier_Condition_TextField 
.unity-text-field__input {

	border-color: rgba(42, 42, 42, 1);

	font-size: 16px;

	/* top - right - bottom - left */
	padding: 4px 0px 0px 10px;
	border-width: 1px 2px 1px 3px;
	border-radius: 0px 0px 0px 0px;
}

.modifier_Condition_TextField 
.unity-text-field__input:hover {

	border-color: rgba(118, 118, 118, 0.588);

	/* top - right - bottom - left */
	border-width: 1px 2px 1px 3px;
	border-radius: 0px 0px 0px 0px;
}

.modifier_Condition_EnumField {

	flex-grow: 1;
	
	/* top - right - bottom - left */
	margin: 0px 2px 0px 0px;
}

.modifier_Condition_EnumField
.unity-enum-field__input {

	min-width: 115px;

	/* top - right - bottom - left */
	margin: 0px 0px 0px 0px;
	padding: 0px 3px 0px 5px;
	border-radius: 0px 0px 0px 0px;
}

.modifier_Condition_EnumField
.unity-enum-field__input
.unity-enum-field__text {

	font-size: 15px;
	
	align-self: Center;
}

.modifier_Condition_EnumField
.unity-enum-field__input
.unity-enum-field__arrow {

	height: 22px;
	width: 21px;
	
	/* top - right - bottom - left */
	margin: 0.5px 0px 0px 10px;
}

.modifier_Condition_FloatField {

	height: 30px;
	width: 100px;

	white-space: normal;
	flex-direction: row;
	flex-grow: 1;
	align-items: Center;
	align-self: Center;

	/* top - right - bottom - left */
	margin: 0px 3px 0px 0px;
}

.modifier_Condition_FloatField
.unity-float-field__input {

	font-size: 16px;

	align-self: Stretch;

	/* top - right - bottom - left */
	padding: 4px 0px 0px 8px;
	border-width: 0px 0px 0px 0px;
	border-radius: 0px 0px 0px 0px;
}

/*< -------------------- Event -------------------- >*/
.modifier_Event_MainBox {
	
	height: 30px;

	flex-direction: row;
	justify-content: space-between;

	/* top - right - bottom - left */
	border-width: 0px 0px 0px 0px;
}

.modifier_Event_ObjectField {

	height: 30px;
	width: 462px;

	-unity-text-align: middle-left;
	
	/* top - right - bottom - left */
	margin: 0px 2px 0px 0px;
}



